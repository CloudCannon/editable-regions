{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "strict": true,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "components/**/*.ts",
    "nodes/**/*.ts",
    "integrations/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "test"],
  "typeAcquisition": {
    "enable": true,
    "include": ["node"]
  }
}
